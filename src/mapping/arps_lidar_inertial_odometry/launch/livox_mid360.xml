<launch>
    <!-- Launch file for Livox AVIA LiDAR -->

    <arg name="rviz" default="false" />

    <node pkg="arps_lidar_inertial_odometry" exec="lio_node" name="laserMapping" output="screen">
        <param name="config_file" value="$(find-pkg-share arps_lidar_inertial_odometry)/config/mid360.yaml"/>
    </node>
    <group if="$(var rviz)">
        <node pkg="rviz2" exec="rviz2" name="rvizLIO" args="-d $(find-pkg-share arps_lidar_inertial_odometry)/rviz_cfg/lio.rviz" />
    </group>


</launch>